{
  "name": "magnitude-mcp",
  "version": "0.1.1",
  "description": "MCP server for Magnitude browser automation",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "bin": {
    "magnitude-mcp": "dist/index.js"
  },
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magnitudedev/magnitude.git"
  },
  "homepage": "https://github.com/magnitudedev/magnitude#readme",
  "bugs": {
    "url": "https://github.com/magnitudedev/magnitude/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "magnitude",
    "browser-automation",
    "ai",
    "agent",
    "testing"
  ],
  "scripts": {
    "build": "tsc && pkgroll",
    "check": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "postinstall": "patchright install chromium"
  },
  "author": {
    "name": "Magnitude",
    "email": "founders@magnitude.run",
    "url": "https://magnitude.run"
  },
  "contributors": [
    "Anders Lie <anders@magnitude.run>",
    "Tom Greenwald <tom@magnitude.run>"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "patchright": "^1.49.0",
    "magnitude-core": "^0.2.32",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "pkgroll": "^2.15.4",
    "typescript": "^5.8.3"
  }
}
